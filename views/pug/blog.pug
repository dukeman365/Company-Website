doctype html
head
  meta(charset="utf-8")
  title Blog
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
  link(rel="stylesheet" type="text/css" href="/css/blog.css")
  link(rel="stylesheet" type="text/css" href="/css/all.css")
  script(src="/js/deletePost.js")

body
  include includes/nav.pug
  div(class="page")
    div(class="blog shadow card")
      div(class="shadow section__header")
        div( class="section__title")
          Our Blog

      div(class="section__content")
        for post in posts
          div( class="margin--bottom card shadow blog__post")
            div(  class="shadow section__header")
              div(  class="section__title")
                a(href="/index/blog/")=post.title
            div(class="section__content")
              =post.content
            div(  class="text-center shadow--top section__footer")
              =post.author
              =post.date
              button(onclick='deletePost()') delete
