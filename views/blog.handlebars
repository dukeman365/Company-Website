
<div class="row page">
  <div class="blog shadow card">
    <div class="shadow section__header">
      <div class="section__title">
        Our Blog
      </div>

    </div>
    <div class="blog__container">
      {{#each posts}}
          <div class="blog__post">
            <div class="shadow section__header">
              <div class="section__title">
                <a href="/index/blog/{{_id}}">{{title}}</a>
              </div>
            </div>
            {{autor}}
            {{content}}
            {{date}}
            <form>
              <input type="button" value ="Delete" onclick="deletePost()" />
            </form>
          </div>
      {{/each}}
    </div>

    <script type = "text/javascript" src="/js/scripts.js"></script>
  </div>
</div>
