<div class="page">
  <!--Start blog-->
  <div class="blog shadow card">
    <!--Start seection header-->
    <div class="shadow section__header">
      <!--Start section title-->
      <div class="section__title">
        Our Blog
      </div>
      <!--End section title-->
    </div>
    <!--End section header-->
    <!--start blog-->
    <div class="section__content">
      {{#each posts}}
        <div class="card shadow blog__post">
          <div class="shadow section__header">
            <div class="section__title">
              <a href="/index/blog/{{_id}}">{{title}}</a>
            </div>
          </div class="section__content">

          {{content}}
          {{date}}
          <div class="text-center shadow--top section__footer">
            By:{{author}}
          </div>
        </div>
        <button onclick="deletePost()">Delete</button>
      {{/each}}
    </div>
    <!--end blog-->
  </div>
  <!--End blog-->
</div>
